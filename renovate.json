{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "deps-",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^.github/workflows/build.yaml$"
      ],
      "matchStrings": [
        "# renovate: repo=(?<depName>.*?)\\s+\\a+: \"?(?<currentValue>.*?)\"?"
      ]
    }
  ]
}
