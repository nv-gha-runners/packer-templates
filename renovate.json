{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "deps-",
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": ["^matrix.yaml$"],
      "matchStrings": [
        "\\s*#\\s*renovate:\\s*repo=(?<depName>.*?)\\s*-\\s*\"?(?<currentValue>.*?)\"?\\s"
      ]
    }
  ]
}
